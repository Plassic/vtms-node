.container-fluid
  ol.breadcrumb
    li.active Channels
.container-fluid
  .pull-right
    form.form-inline
      .form-group
        input.form-control(ng-model="searchText", placeholder="Filter")
      .form-group
        select.form-control(ng-model="sortOrder", ng-options="item.value as item.text for item in sortOptions")
  table.table.table-hover.table-striped.table-condensed
    thead
      tr
        th Name
    tbody
      tr(ng-repeat="channel in channels | filter:searchText | orderBy: sortOrder")
        td
          a(href="/channels/{{channel.id}}") {{channel.name}}
