.container-fluid
  ol.breadcrumb
    li
      a(href="/series") Series List
    li
      a(href="/series/{{ctrl.lesson.languageSery.series.id}}") {{ctrl.lesson.languageSery.series.title}}
    li
      a(href="/language-series/{{ctrl.lesson.languageSery.id}}") {{ctrl.lesson.languageSery.title}}
    li.active {{"#" + ctrl.lesson.number}} {{ctrl.lesson.title}}
.container-fluid
  h1
    a(href="#", editable-text="ctrl.lesson.title", onbeforesave="update({title: $data})") {{ctrl.lesson.title}}
.container-fluid
  task-list(config="ctrl.tasksConfig")
.container-fluid
  h3
    a(ng-href='/lesson/{{ctrl.lesson.id}}/checking') Checking
  issues-list(issues="ctrl.issuesList", config="ctrl.issuesConfig", update-fn="ctrl.updateIssues()")
  publish-dates-list(publish-dates="ctrl.publishDatesList", config="ctrl.publishDatesConfig", update-fn="ctrl.updatePublishDates()")
.container-fluid
  activity-list(activities="ctrl.activityList", config="ctrl.activityListConfig", update-fn="ctrl.updateActivities()")
.container-fluid
  h3
    a(ng-href='/lesson/{{ctrl.lesson.id}}/shooting') Shooting
  shot-list(lesson="ctrl.lesson", config="ctrl.shotsConfig", update-fn="ctrl.updateShots()")
