.container-fluid
  ol.breadcrumb
    li
      a(href="/series") Series List
    li.active {{series.title}}
.container
  h1 {{series.title}}
  .pull-right
    form.form-inline
      .form-group
        input.form-control(ng-model="searchText", placeholder="Filter")
      .form-group
        select.form-control(ng-model="selectedSortOption", ng-options="item.value as item.text for item in sortOptions")
  table.table.table-hover.table-striped.table-condensed
    thead
      tr
        th Language
        th Title
        th Level
    tbody
      tr(ng-repeat="langSery in series.languageSeries | filter:searchText | orderBy: selectedSortOption")
        td {{langSery.language.name}}
        td
          a(href="/languageSeries/{{langSery.id}}") {{langSery.title}}
        td {{langSery.level.name}}