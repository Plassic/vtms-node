videogular(vg-player-ready="ctrl.onPlayerReady($API)", vg-theme="config.theme.url", vg-update-time="ctrl.onUpdateTime($currentTime)")
  vg-media(vg-src="config.sources")
  vg-controls
    vg-play-pause-button
    vg-time-display {{ currentTime | date:'mm:ss' }}
    vg-scrub-bar
      vg-scrub-bar-current-time
    vg-fullscreen-button