extends ../layouts/index

block content
  ol.breadcrumb
    li
      a(href='/db') Series List
    li.active= series.title
  
  h2= series.title
  div.series-list
    table.table
      tr
        th Language
        th Level
        th Title
      each languageSery in series.languageSeries
        tr
          td= languageSery.language.name
          td= languageSery.level.name
          td
            a(href='/languageSeries/#{languageSery.id}')= languageSery.title